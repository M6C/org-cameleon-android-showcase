<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonDlg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:onClick="onClickButtonDialog"
            android:text="Dialog" />

        <Button
            android:id="@+id/buttonDlgList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:onClick="onClickButtonDialogList"
            android:text="Dialog Lit" />

        <Button
            android:id="@+id/buttonDlgMultiChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:onClick="onClickButtonSnackMessage"
            android:text="Dialog Multi Choice" />

    </LinearLayout>
</ScrollView>